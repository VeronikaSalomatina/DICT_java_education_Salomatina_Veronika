import java.util.Scanner;

public class CoffeMachine {
    public static short water = 400, milk = 540, coffee = 120, cups = 9, remaining = 550;
    public static void main(String[] args) {




        while (true){
            System.out.println("Write action (buy, fill, take, remaining, exit):");
            Scanner scanner = new Scanner(System.in);


            String com = scanner.nextLine();
            if (com.equals("buy")) {
                buy();

            }else if (com.equals("fill")) {
                fill();

            }else if (com.equals("take")) {
                take();

            }else if (com.equals("remaining")) {
                System.out.println("The coffee machine has:\n" + water + " of water\n" + milk + " of milk\n" + coffee + " of coffee beans\n" + cups + " of disposable cups\n" + remaining + " of money");

            }else if (com.equals("exit")) {
                System.exit(0);
            }

        }
    }

    static void take() {
        System.out.println("I gave you " + remaining);
        remaining = 0;
        return;
    }

    static void fill() {
        System.out.println("Write how many ml of water do you want to add:");
        Scanner scanner = new Scanner(System.in);

        water += Integer.parseInt(String.valueOf(scanner.nextLine()));

        System.out.println("Write how many ml of milk do you want to add:");
        milk += Integer.parseInt(String.valueOf(scanner.nextLine()));

        System.out.println("Write how many grams of coffee beans do you want to add:");
        coffee += Integer.parseInt(String.valueOf(scanner.nextLine()));

        System.out.println("Write how many disposable cups of coffee do you want to add:");
        cups += Integer.parseInt(String.valueOf(scanner.nextLine()));


        return;
    }


    static void buy() {
        System.out.println("What do you want to buy? 1 - espresso, 2 - latte, 3 - cappuccino, back â€“ to main menu:");
        Scanner scanner = new Scanner(System.in);
        String com = scanner.nextLine();
        if (com.equals("1")) {
            if (water >= 250 && coffee >= 16 && cups >= 1) {
                System.out.println("I have enough resources, making you a coffee!");
                water-=250;
                coffee-=16;
                cups-=1;
                remaining += 4;
            } else System.out.println("");
        } else if (com.equals("2")) {
            if (water >= 350 && coffee >= 20 && milk >= 75 && cups >= 1) {
                System.out.println("I have enough resources, making you a coffee!");
                remaining += 7;
                water-=350;
                coffee-=20;
                milk-=75;
                cups-=1;
            }
        } else if (com.equals("3")) {
            if (water >= 200 && coffee >= 12 && milk >= 100 && cups >= 1) {
                System.out.println("I have enough resources, making you a coffee!");
                remaining += 6;
                water-=200;
                coffee-=12;
                milk-=100;
                cups-=1;
            }
        }else if (com.equals("back")) {

        }else {
            System.out.println("Something get wrong!");
            //buy(water, milk, coffee, cups, remaining);
        }
        return;

    }
}
